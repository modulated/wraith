// Demo file for testing parsing
addr SCREEN = 0x0400;
addr LED = 0x0401;

#[section("CODE")]
fn main() {
    // Variables
    x: u8 = 10;
    y: u8 = 20;

    // Arithmetic
    sum: u8 = add(x, y);
    SCREEN = sum;

    // Control flow
    if sum > 15 {
        SCREEN = 1;
        LED = 2;
    } else {
        LED = 4;
    }
}

fn add(a: u8, b: u8) -> u8 {
    return a + b;
}
