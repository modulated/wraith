{
  "name": "Wraith",
  "scopeName": "source.wraith",
  "fileTypes": ["wr"],
  "patterns": [
    {
      "include": "#comments"
    },
    {
      "include": "#attributes"
    },
    {
      "include": "#keywords"
    },
    {
      "include": "#types"
    },
    {
      "include": "#functions"
    },
    {
      "include": "#strings"
    },
    {
      "include": "#numbers"
    },
    {
      "include": "#operators"
    },
    {
      "include": "#variables"
    }
  ],
  "repository": {
    "comments": {
      "patterns": [
        {
          "name": "comment.line.double-slash.wraith",
          "match": "//.*$"
        }
      ]
    },
    "attributes": {
      "patterns": [
        {
          "name": "meta.attribute.wraith",
          "begin": "#\\[",
          "end": "\\]",
          "beginCaptures": {
            "0": {
              "name": "punctuation.definition.attribute.wraith"
            }
          },
          "endCaptures": {
            "0": {
              "name": "punctuation.definition.attribute.wraith"
            }
          },
          "patterns": [
            {
              "name": "entity.name.function.attribute.wraith",
              "match": "\\b(org|inline|interrupt|no_return)\\b"
            },
            {
              "include": "#numbers"
            }
          ]
        }
      ]
    },
    "keywords": {
      "patterns": [
        {
          "name": "keyword.control.wraith",
          "match": "\\b(if|else|while|for|loop|break|continue|return|in)\\b"
        },
        {
          "name": "keyword.declaration.wraith",
          "match": "\\b(fn|let|static|addr|struct|enum|asm)\\b"
        },
        {
          "name": "storage.modifier.wraith",
          "match": "\\b(mut|zp|pub)\\b"
        },
        {
          "name": "constant.language.wraith",
          "match": "\\b(true|false)\\b"
        }
      ]
    },
    "types": {
      "patterns": [
        {
          "name": "storage.type.primitive.wraith",
          "match": "\\b(u8|u16|u32|i8|i16|i32|bool|str)\\b"
        }
      ]
    },
    "functions": {
      "patterns": [
        {
          "name": "meta.function.wraith",
          "match": "\\b(fn)\\s+([a-zA-Z_][a-zA-Z0-9_]*)\\b",
          "captures": {
            "1": {
              "name": "keyword.declaration.function.wraith"
            },
            "2": {
              "name": "entity.name.function.wraith"
            }
          }
        },
        {
          "name": "meta.function-call.wraith",
          "match": "\\b([a-zA-Z_][a-zA-Z0-9_]*)\\s*\\(",
          "captures": {
            "1": {
              "name": "entity.name.function.call.wraith"
            }
          }
        }
      ]
    },
    "strings": {
      "patterns": [
        {
          "name": "string.quoted.double.wraith",
          "begin": "\"",
          "end": "\"",
          "patterns": [
            {
              "name": "constant.character.escape.wraith",
              "match": "\\\\(n|r|t|\\\\|\"|'|x[0-9a-fA-F]{2})"
            }
          ]
        }
      ]
    },
    "numbers": {
      "patterns": [
        {
          "name": "constant.numeric.hex.wraith",
          "match": "\\b0x[0-9a-fA-F_]+\\b"
        },
        {
          "name": "constant.numeric.binary.wraith",
          "match": "\\b0b[01_]+\\b"
        },
        {
          "name": "constant.numeric.decimal.wraith",
          "match": "\\b[0-9][0-9_]*\\b"
        }
      ]
    },
    "operators": {
      "patterns": [
        {
          "name": "keyword.operator.comparison.wraith",
          "match": "(==|!=|<=|>=|<|>)"
        },
        {
          "name": "keyword.operator.logical.wraith",
          "match": "(&&|\\|\\||!)"
        },
        {
          "name": "keyword.operator.bitwise.wraith",
          "match": "(&|\\||\\^|<<|>>|~)"
        },
        {
          "name": "keyword.operator.arithmetic.wraith",
          "match": "(\\+|-|\\*|/|%)"
        },
        {
          "name": "keyword.operator.assignment.wraith",
          "match": "(=|\\+=|-=|\\*=|/=|%=|&=|\\|=|\\^=|<<=|>>=)"
        }
      ]
    },
    "variables": {
      "patterns": [
        {
          "name": "variable.other.constant.wraith",
          "match": "\\b[A-Z][A-Z0-9_]*\\b"
        },
        {
          "name": "variable.other.wraith",
          "match": "\\b[a-z_][a-zA-Z0-9_]*\\b"
        }
      ]
    }
  }
}
